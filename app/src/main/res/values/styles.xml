<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:gravity">center</item>`
    </style>

    <style name="Header2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:backgroundTint">@color/cobalt</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/cobalt</item>
    </style>

    <style name="ImageTextButton" parent="TextButton">
        <item name="iconGravity">start</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="textAppearanceButton">@style/Text</item>
        <item name="iconTint">@color/cobalt</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="iconPadding">@dimen/default_margin</item>
    </style>

    <style name="PeriodView" parent="ImageTextButton">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
    </style>

    <style name="Header3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/header3_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Header4" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/header4_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BottomSheetDialog">
        <item name="cornerSize">@dimen/btm_sht_rounding_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>



</resources>