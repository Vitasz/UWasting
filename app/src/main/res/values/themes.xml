<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="backgroundColor">@color/white</item>
        <item name="colorPrimary">@color/cobalt</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cobalt</item>
        <item name="colorSecondaryVariant">@color/cobalt</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceButton">@style/TextButton</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="shapeAppearanceLargeComponent">@style/BottomSheetDialog</item>
    </style>
</resources>